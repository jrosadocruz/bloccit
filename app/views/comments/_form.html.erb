<%= form_for [topic, post, post.comments.new] do |f| %>



  <%= form_group_tag(post.errors[:body]) do %>
    <%= f.label 'New Comment' %>
    <%= f.text_area :body, class: 'form-control', placeholder: 'Enter comment body' %>
  <% end %>

  <div class="form-group">
    <%= f.submit 'Save comment', class: 'btn btn-success' %>
  </div>
<% end %>