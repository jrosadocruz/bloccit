<div class="media">
  <div class="media-left media-middle">
    <%= render partial: 'votes/voter', locals: {post: @post} %>
  </div>
  <div class="media-body">
    <h1 style="margin-top: 8px;"><%= markdown_to_html @post.title %></h1>
  </div>
</div>


<div class="row">
  <div class="col-md-8">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
    <% end %>
    <% if policy(@post).destroy? %>
      <%= link_to "Delete", [@topic, @post], method: :delete, class: 'btn btn-danger', data: { confirm: "Are you sure you want to delete the post?"}%>
    <% end %>
  </div>
</div>

<br>

<div class="row">
  <div class="col-md-8">
    <p class="lead"><%= @topic.description %></p>
  </div>
</div>

<div>
  <h3><%= pluralize(@post.points, 'point') %></h3>
  <small>
    <%= pluralize(@post.up_votes, 'up vote') %>,
    <%= pluralize(@post.down_votes, 'down vote') %>
  </small>
</div>

<%= render partial: 'favorites/favorite', locals: {post: @post} %>

<% if @comments %>
  <h3>Comments (<%= @comments.count %>)</h3>

  <% @comments.each do |c| %>
    <%= content_tag :div, class: 'media', id: "comment-#{c.id}" do %>
      <div class="media-left"><%= image_tag(c.user.avatar.small.url) %></div>
      <div class="media-body">
        <small>
          <%= c.user.name || c.user.email %> commented <%= time_ago_in_words(c.created_at) %> ago
          <% if policy(c).destroy? %>
            | <%= link_to "Delete", [@post, c], method: :delete %>
          <% end %>
        </small>
        <p><%= c.body %></p>
      </div>
    <% end %>
  <% end %>
<% end %>

<% if policy(@comments).create? %>
  <%= render partial: 'comments/form', locals: { post:@post }%>
<% end %>