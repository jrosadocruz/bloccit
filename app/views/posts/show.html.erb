<h1><%= @post.title %></h1>
<% if policy(@post).edit? %>
  <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
<% end %>

<p><%= @post.body %></p>

<hr>
<h4>Summary</h4>

<% if @summary %>
  <%= link_to 'Edit summary', edit_topic_post_summary_path(@topic, @post, @summary), class: 'btn  btn-primary'%> <br><br>
  <p><%= @post.summary.body %></p>
<% else %>
  <%= link_to 'Add summary', new_topic_post_summary_path(@topic, @post, @summary), class: 'btn  btn-primary'%>
<% end %>